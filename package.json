{
  "name": "party-database",
  "version": "1.0.0",
  "description": "Database for the person & group data domain",
  "author": {
    "name": "Jim Barrows",
    "email": "Jim.Barrows@gmail.com"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build" : "npm run build:sql; npm run build:docker",
    "build:docker" : "docker build --tag erpmicroservices/party-db --rm .",
    "build:sql": "node create_us_cities_sql.js;node create_us_zip_codes.js;",
    "db_admin": "docker run --detach --publish 5050:5050 --name party-db-pgadmin --link party-db:db thajeztah/pgadmin4",
    "push": "docker push erpmicroservices/party-db:latest",
    "start": "docker run --publish 5432:5432 --name party-db erpmicroservices/party-db",
    "test": "cucumber-js --tags @party_database --compiler es6:babel-core/register  -r ./features ../party-features"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErpMicroServices/party-database.git"
  },
  "bugs": {
    "url": "https://github.com/ErpMicroServices/party-database/issues"
  },
  "homepage": "https://github.com/ErpMicroServices/party-database#readme",
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-preset-es2015": "^6.22.0",
    "chai": "^3.5.0",
    "cucumber": "^2.0.0-rc.7",
    "moment": "^2.17.1",
    "pg-promise": "^5.6.2"
  },
  "dependencies": {
    "csv": "^1.1.1",
    "moment": "^2.17.1",
    "pg-promise": "^5.9.7",
    "uuid": "^3.1.0"
  }
}
